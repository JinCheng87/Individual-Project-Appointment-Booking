<div id="new-form">
  <%= form_for([@store,@appointment]) do |f| %>
    <% if @appointment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@appointment.errors.count, "error") %> Error:</h2>

        <ul>
        <% @appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %> 
      <%= f.text_field :name, class:"form-control", placeholder:"Name", required: true%> 
    </div>

    <div class="form-group">
      <%= f.label :"phone number" %> 
      <%= f.telephone_field :phone_number, class:"form-control", placeholder:"Phone number", required: true%> 
    </div>

    <div class="form-group">
      <%= f.label :email %> 
      <%= f.email_field :email, class:"form-control", placeholder:"Email", required: true%> 
    </div>

    <div class="form-group">
      <%= f.label :"date time" %> 
      <%= f.datetime_field :date_time, class:"form-control", required: true%> 
    </div>

    <div class="form-group">
      <%= f.label :"appointment with" %> 
      <%= f.select :staff_id, @staffs.collect { |staff| [staff.name, staff.id]}, {}  , {class:"form-control input-lg"} %> 
    </div>

    <div class="form-group">
      <%= f.label :service %> 
      <%= f.select :service_ids, @services.collect { |service| [service.name, service.id]}, {}, {class:"form-control input-lg"}%> 
    </div>
    <%= hidden_field_tag 'token', params[:token] %>
    <div class="action">
      <%= f.submit class:"btn btn-primary center-block"%>
    </div>

  <% end %>
</div> 