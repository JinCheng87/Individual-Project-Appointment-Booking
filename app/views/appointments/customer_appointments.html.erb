<h1>Appointments for <%= @current_user.name %></h1>
<% if @appointments.any? %>
  <% @appointments.each do |app| %>
    <%= link_to app.date, store_appointment_path(app.store,app) %>
    <%= app.time.strftime('%H:%M') %>
    with <%= app.staff.name %>
    at <%= app.store.location %>
    <br>
  <% end %>
<% else %>
  <h3>No appointment yet</h3>
<% end %>
