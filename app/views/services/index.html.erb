<% if @services.any? %>
  <table class="table table-hover">
      <tr>
        <th><p>name</p></td>
        <th><p>duration</p></td>
        <th><p>price</p></td>
      </tr>
    <% @services.each do |service| %>
      <tr>
        <td><p><%= link_to service.name, service_path(service) %></p></td>  
        <td><p><%= service.duration %></p></td>  
        <td><p><%= service.price %></p></td>  
      </tr>
    <% end %>
  </table>
<% else %>
  <h3>No service yet</h3>
<% end %>
<% if @is_admin %>
  <%= link_to 'Add service', new_service_path %>
<% end %>