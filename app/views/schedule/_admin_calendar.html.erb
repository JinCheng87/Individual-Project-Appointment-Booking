<table>
  <tr>
  <th>time</th>
  <% @staffs.each do |staff| %>
    <th><%= staff.name %></th>
    <% end %>
  </tr>
  <% 24.times do |index| %>
    <tr>
      <td><%= time=('%02d' % index +':00')%></td>
        <% @staffs.each do |staff| %>
        <%if staff.available(date, index) %>
          <td><%= link_to 'book', new_store_appointment_path(@store, staff_id: staff.id, time: time, date: date) %></td>
        <% else %>
          <td><%= link_to 'view', staff_appointments_path(@store, staff) %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>