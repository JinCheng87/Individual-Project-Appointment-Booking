<div class="container-fluid">
    <div class="row">
      <div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
          <li class="active"><a href="/admin">Calendar <span class="sr-only">(current)</span></a></li>
          <li><%= link_to 'Appointments', show_appointments_path %></li>
          <li><%= link_to 'Empolyees', show_empolyees_path %></li>
          <li><%= link_to 'Stores', show_stores_path %></li>
          <li><%= link_to 'Services', show_services_path %></li>
        </ul>
      </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-1 main">
    <h1 class="page-header col-md-offset-3">Calendar</h1>

      <div class="container stores">
        <div class="row">
        <% @stores.each do |store| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
             <%= image_tag("store.jpg", size:"200", class:"img-circle") %>
            <br>
            <br>
            <p><%= store.location %></p>
            <p><%= button_to "View Calendar", store_schedule_path(store, Date.today), class:"btn btn-default center-block", method: :get %></p>
          </div>
       <% end %>
      </div>
      </div>
  </div>
</div>








